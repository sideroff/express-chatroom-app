    body
        header(class="navbar navbar-inverse")
            div(class="container-fluid")
                div(class="navbar-header")
                    button(type="button", class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                    a(href="/" class="navbar-brand") BlogBul
                div(class="collapse navbar-collapse" id="myNavbar")
                    ul(class="nav navbar-nav")
                        each hl in headerLinks
                            li 
                                a(href=hl.href class="navbar-btn") #{hl.text}
                    ul(class="nav navbar-nav navbar-right")
                        li
                            a(href="/register" class="glyphicon glyphicon-user")  Register
                        li
                            a(href="/login" class="glyphicon glyphicon-log-in")  Login
        
        block content